---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---
<header x-data="{ showmenu: false }" class="bg-primary-400" >
    <div id="navbar" class="container mx-auto p-4 flex flex-row justify-between items-center">
        <div id="logo" class="">
            <a href="#" class="font-display text-4xl">Livl√∏s</a>
        </div>
        <nav id="desktopmenu" class="hidden lg:block">
            <ul class="flex flex-row gap-4">
                <li class=""><a href="/" class={currentPath === "" ? "font-bold" : ""}>forside</a></li><!-- alternativt: lav et <a href="">Link</a>, hvis du ikke vil bruge Link.astro komponenten -->
                <li class=""><a href="/lyt/" class={currentPath === "lyt/" ? "font-bold" : ""}>lyt</a></li>
                <li class=""><a href="/live/" class={currentPath === "live/" ? "font-bold" : ""}>live</a></li>
                <li class=""><a href="/om/" class={currentPath === "om/" ? "font-bold" : ""}>om</a></li>

            </ul>
        </nav>
        <button id="burgermenu" class="lg:hidden" x-on:click="showmenu = ! showmenu">Menu</button>
    </div>
    <nav id="mobilmenu" class="flex flex-col content-center" 
    x-show="showmenu" x-transition x-on:click="showmenu = false" x-on:click.outside="showmenu = false">
        <ul class="border-t-2 border-b-2 border-black">
            <li class="text-center py-2"><a href="/" class={currentPath === "" ? "font-bold" : ""}>Forside</a></li>
            <li class="text-center py-2"><a href="/lyt/" class={currentPath === "lyt/" ? "font-bold" : ""}>lyt</a></li>
            <li class="text-center py-2"><a href="/live/" class={currentPath === "live/" ? "font-bold" : ""}>live</a></li>
            <li class="text-center py-2"><a href="/om/" class={currentPath === "om/" ? "font-bold" : ""}>om</a></li>
        </ul>
    </nav>
</header>